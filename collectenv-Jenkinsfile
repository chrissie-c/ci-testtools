
def runstuff(String agentName) {
    node("${agentName}") {
        stage("Env in ${agentName}") {
            echo "running on agent, ${agentName}"
            sh 'uname -a'
	    sh 'printenv'
        }
    }
}

def runstuff2(String agentName) {
    node("${agentName}") {
        stage("Env in ${agentName}") {
            echo "running on agent, ${agentName}"
            sh 'uname -a'
	    sh 'printenv'
        }
    }
}


pipeline {
    agent {
        label "built-in"
    }
        
    options {
        timestamps()
    }
        
    stages {
        stage('agents-tasks') {
            
            steps {
                script {
		    agentName='debian'
		    rh_env = collectenv('rh', this&.runstuff2)
		    println("CC: rh_env = ${rh_env}")
		    deb_env = collectenv('deb', this&.runstuff)
		    println("CC: deb_env = ${deb_env}")

                    parallel rh_env + deb_env
                }
            }
        }
    }
}
