def runStuff(String nodename)
{
    println("runstuff: ${nodename}")
    node("${nodename}") {
	stage("do it on ${nodename}") {
	    println("${env.NODE_NAME}")
	}
    }
}

def buildRun(Map info)
{
    def runmap = [:]
    def allnodes = getAllNodes()
    for (i in allnodes) {
	runmap["_${i}"] = {
	    runStuff("${i}")
	}
    }
    return runmap
}

def info = [:]
pipeline {
    agent { label 'built-in' }

    stages {
	// This is the main stage that covers everything
	stage('go') {
	    steps {
		script {
		    def map = buildRun(info)
		    println(map)
		    parallel map
		}
	    }
	}
    }
}
